<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav id="menus" class="navbar navbar-expand-sm navbar-dark bg-primary fixed-top">
        <div id="sidebarToggler" class="toggle-btn">
            <span></span>
            <span></span>
            <span></span>
        </div>
        @Html.ActionLink("Student Registration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navmenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navmenu">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" }) </li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" }) </li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" }) </li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav><br>

    <div id="wrapper">

        <div id="sidebar-wrapper" class="bg-primary">
            <ul id="sidebar-nav">
                <li><a href="#">Student</a></li>
                <li><a href="#">Instructor</a></li>
                <li><a href="#">School</a></li>
            </ul>
        </div>
        
        <div id="main-wrapper" class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
    <script>
        
        $("#sidebarToggler").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("menuDisplayed");
            
        });
    </script>
</body>
</html>
